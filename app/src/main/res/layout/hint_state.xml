<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameState.HintState">

    <com.example.ciphergame.Views.ImageNumberView
        android:id="@+id/coinImageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.5" />

    <com.example.ciphergame.Views.BackButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <Button
            android:id="@+id/hint1"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/hint2"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/hint3"
            android:layout_width="1dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <Button
            android:id="@+id/answer1"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="textStart"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/answer2"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="textStart"
            android:layout_width="1dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/answer3"
            android:textSize="20sp"
            android:textColor="#000"
            android:textAlignment="textStart"
            android:layout_width="1dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/hint_image1"
            android:background="@drawable/coin"
            android:layout_width="1dp"
            android:layout_height="1dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/hint_image2"
            android:background="@drawable/coin"
            android:layout_width="1dp"
            android:layout_height="1dp"
            tools:ignore="ContentDescription"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/hint_image3"
            android:background="@drawable/coin"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/hint1_text"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="24sp"
            android:textColor="#000"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/hint2_text"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="24sp"
            android:textColor="#000"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/hint3_text"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textSize="24sp"
            android:textColor="#000"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>