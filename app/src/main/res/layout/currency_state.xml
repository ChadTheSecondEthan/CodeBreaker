<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameState.CurrencyState">

    <com.example.ciphergame.Views.BackButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <ScrollView
        android:id="@+id/currencyScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:id="@+id/currency_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/currency_button1"
                android:background="@drawable/black_background"
                android:layout_marginBottom="24dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="#000"
                android:text="@string/video_ad"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/currency_button2"
                android:background="@drawable/black_background"
                android:layout_marginBottom="24dp"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/currency_button3"
                android:background="@drawable/black_background"
                android:layout_marginBottom="24dp"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/currency_button4"
                android:background="@drawable/black_background"
                android:layout_marginBottom="24dp"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/currency_button5"
                android:background="@drawable/black_background"
                android:layout_marginBottom="24dp"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/currency_button6"
                android:background="@drawable/black_background"
                android:layout_width="1dp"
                android:layout_height="1dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/no_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="28sp"
        android:visibility="invisible"
        android:text="@string/no_money"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

