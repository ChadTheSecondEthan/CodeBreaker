<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level_screen"
    tools:context=".GameState.LevelState">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintVertical_bias="0.75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/level1"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level2"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level3"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level4"
                android:layout_width="1dp"
                android:layout_height="1dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/level5"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level6"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level7"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level8"
                android:layout_width="1dp"
                android:layout_height="1dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/level9"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level10"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level11"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level12"
                android:layout_width="1dp"
                android:layout_height="1dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/level13"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level14"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level15"
                android:layout_width="1dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/level16"
                android:layout_width="1dp"
                android:layout_height="1dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/up_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:background="@color/opaqueBlack"
        ads:layout_constraintVertical_bias="0.39"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/down_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@color/opaqueBlack"
        ads:layout_constraintVertical_bias="0.89"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/opaqueBlack"
        ads:layout_constraintHorizontal_bias="0.07"
        ads:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/volumeButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@color/opaqueBlack"
        ads:layout_constraintHorizontal_bias="0.93"
        ads:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/level_state_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-6560766161336853/7147883542"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>