<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameState.LevelState" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintHorizontal_bias="0.5" >

        <TableRow
            android:layout_marginTop="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" >

            <Button
                android:id="@+id/level1"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level2"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level3"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level4"
                android:layout_width="72dp"
                android:layout_height="72dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" >

            <Button
                android:id="@+id/level5"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level6"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level7"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level8"
                android:layout_width="72dp"
                android:layout_height="72dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" >

            <Button
                android:id="@+id/level9"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level10"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level11"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level12"
                android:layout_width="72dp"
                android:layout_height="72dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" >

            <Button
                android:id="@+id/level13"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level14"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level15"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level16"
                android:layout_width="72dp"
                android:layout_height="72dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" >

            <Button
                android:id="@+id/level17"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level18"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level19"
                android:layout_marginEnd="12dp"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <Button
                android:id="@+id/level20"
                android:layout_width="72dp"
                android:layout_height="72dp" />

        </TableRow>

    </TableLayout>

    <com.example.ciphergame.Views.BackButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.ciphergame.Views.Title
        android:id="@+id/title"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/allerta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.5" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" >

        <Button
            android:id="@+id/level_left_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/left_facing_arrow"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/level_page_number"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <Button
            android:id="@+id/level_right_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/right_facing_arrow"
            android:layout_marginStart="12dp" />
    </TableRow>

    <com.google.android.gms.ads.AdView
        android:id="@+id/level_state_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-6560766161336853/7147883542"
        ads:adSize="BANNER"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>